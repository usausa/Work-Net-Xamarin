<?xml version="1.0" encoding="UTF-8"?>
<ContentView x:Class="Business.FormsApp.Modules.Dialog.DialogMenuView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resolver="clr-namespace:Smart.Forms.Resolver;assembly=Smart.Forms"
             xmlns:modules="clr-namespace:Business.FormsApp.Modules.Dialog;assembly=Business.FormsApp"
             xmlns:shell="clr-namespace:Business.FormsApp.Shell;assembly=Business.FormsApp"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type={x:Type modules:DialogMenuViewModel}}"
             resolver:BindingContextResolver.Type="{x:Type modules:DialogMenuViewModel}"
             shell:ShellProperty.Title="Dialog Menu"
             shell:ShellProperty.CanBack="True">

    <!--
    <ContentView.BindingContext>
        <modules:DialogMenuViewModel/>
    </ContentView.BindingContext>
    -->

    <Grid Style="{StaticResource MenuGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Style="{StaticResource NavigationButton}"
                Text="Progress"
                Command="{Binding ProgressCommand}"/>
        <Button Grid.Row="1" Style="{StaticResource NavigationButton}"
                Text="Loading"
                Command="{Binding LoadingCommand}"/>
        <Button Grid.Row="2" Style="{StaticResource NavigationButton}"
                Text="Date"
                Command="{Binding DateCommand}"/>
        <Button Grid.Row="3" Style="{StaticResource NavigationButton}"
                Text="Time"
                Command="{Binding TimeCommand}"/>
        <Button Grid.Row="4" Style="{StaticResource NavigationButton}"
                Text="Popup"
                Command="{Binding PopupCommand}"/>
        <Button Grid.Row="5" Style="{StaticResource NavigationButton}"
                IsEnabled="False"/>
        <Button Grid.Row="6" Style="{StaticResource NavigationButton}"
                IsEnabled="False"/>
        <Button Grid.Row="7" Style="{StaticResource NavigationButton}"
                IsEnabled="False"/>

    </Grid>

</ContentView>